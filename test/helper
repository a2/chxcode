# shellcheck shell=sh

[ -z "$SHUNIT2" ] && SHUNIT2=/usr/local/bin/shunit2
[ -n "$ZSH_VERSION" ] && setopt shwordsplit

. ./share/chxcode/chxcode
unset DEVELOPER_DIR
unset APPLICATIONS

setUp() {
  tmpdir="$(mktemp -d)"

  APPLICATIONS="$tmpdir/Applications"
  mkdir "$APPLICATIONS"
  export APPLICATIONS

  test_project_dir="$tmpdir/project"
  mkdir "$test_project_dir"
  export test_project_dir
}

tearDown() {
  unset APPLICATIONS
  unset tmpdir
  unset DEVELOPER_DIR
}
