# shellcheck shell=sh

[ -z "$SHUNIT2" ] && SHUNIT2=/usr/local/bin/shunit2
[ -n "$ZSH_VERSION" ] && setopt shwordsplit

. ./share/chxcode/chxcode
unset DEVELOPER_DIR
unset APPLICATIONS

setUp() {
  original_pwd="$PWD"
  APPLICATIONS="$PWD/test/applications"
  export APPLICATIONS

  tmpdir=$(mktemp -d)
  test_project_dir="$tmpdir/test/project"
  mkdir -p "$test_project_dir"
  export test_project_dir
}

tearDown() {
  unset APPLICATIONS
  unset tmpdir
  unset DEVELOPER_DIR
  cd "$original_pwd" || exit 2
}
